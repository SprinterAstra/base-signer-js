{
  "name": "signer",
  "version": "0.0.1",
  "description": "Base Signer JS library for BASE-platform",
  "main": "Signer.js",
  "scripts": {
    "postinstall": "node remove-bitcore-lib-dep.js",
    "test": "npm run remove-bitcore-lib-dep && mocha --timeout 10000 --recursive --require ts-node/register \"./test/**/*Test.ts\"",
    "coverage": "nyc npm run test",
    "coveralls": "npm run coverage && cat coverage/lcov.info | coveralls",
    "remove-bitcore-lib-dep": "node remove-bitcore-lib-dep.js",
    "build": "npm run remove-bitcore-lib-dep && webpack",
    "start": "npm run remove-bitcore-lib-dep && ts-node-dev --compiler typescript --project tsconfig.json ./src/Signer.ts"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "remove-bitcore-lib-dep.js",
      "**/*.d.ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "lcov",
      "text"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bitclave/base-signer-js.git"
  },
  "keywords": [
    "Bitclave",
    "Base",
    "Signer",
    "JS",
    "Library",
    "CAT"
  ],
  "author": "Bitclave",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bitclave/base-signer-js/issues"
  },
  "homepage": "https://github.com/bitclave/base-signer-js#readme",
  "dependencies": {
    "bitcore-ecies": "^1.0.3",
    "bitcore-lib": "^0.15.0",
    "bitcore-message": "^1.0.4",
    "bs58": "^4.0.1",
    "buffer-compare": "^1.1.1",
    "crypto-js": "^3.1.9-1",
    "rxjs": "^5.5.7"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.40",
    "@babel/preset-env": "^7.0.0-beta.40",
    "@types/chai": "^4.1.2",
    "@types/mocha": "^2.2.48",
    "@types/node": "^9.4.7",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-preset-es2015": "^6.24.1",
    "body-parser": "^1.18.2",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "cors": "^2.8.4",
    "coveralls": "^3.0.0",
    "express": "^4.16.3",
    "istanbul": "^0.4.5",
    "mocha": "^5.0.0",
    "node-localstorage": "^1.3.0",
    "nyc": "^11.4.1",
    "ts-loader": "^4.0.1",
    "ts-node": "^5.0.1",
    "ts-node-dev": "^1.0.0-pre.18",
    "typescript": "^2.7.1",
    "webpack": "^4.1.1",
    "webpack-cli": "^2.0.12"
  }
}
